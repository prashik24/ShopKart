# -------------------------
# ShopKart Environment Config
# -------------------------

# Server
PORT=4000
CLIENT_ORIGIN=http://localhost:5173

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/shopkart

# JWT (Authentication)
JWT_SECRET=your-secret-key
JWT_COOKIE_NAME=sk_session
JWT_EXPIRES_DAYS=7

# SMTP (Email Sending)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM="ShopKart <no-reply@example.com>"
